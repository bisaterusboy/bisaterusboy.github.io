<IfModule mod_rewrite.c>
# Aktifkan mod_rewrite untuk mengatur URL dan routing
RewriteEngine On

# Jika file yang diminta bukan file fisik (.css, .js, dll) atau folder yang ada, arahkan ke index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]
</IfModule>

# -----------------------------------------------
# Mengatur Caching untuk File Statis (JS, CSS, dll)
# -----------------------------------------------
<FilesMatch "\.(ico|jpg|jpeg|png|gif|css|js|woff|woff2|ttf|svg|eot)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# -----------------------------------------------
# Mengaktifkan GZIP Compression untuk Mempercepat Loading
# -----------------------------------------------
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/x-javascript application/javascript
</IfModule>

# -----------------------------------------------
# Mencegah Hotlinking untuk File Gambar (Opsional)
# -----------------------------------------------
RewriteEngine On
RewriteCond %{HTTP_REFERER} !^https://(www\.)?esanet\.id [NC]
RewriteRule \.(jpg|jpeg|png|gif|svg)$ - [F,NC]

# -----------------------------------------------
# Menampilkan Custom Error Pages (Opsional)
# -----------------------------------------------
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# php -- BEGIN cPanel-generated handler, do not edit
